<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/latView"
        android:text="__________"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/lngView"
        android:text="__________"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/latView"
        />
    <TextView
        android:id="@+id/timeView"
        android:text="_"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/latView"
        />
    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/delete_task"
        android:layout_alignParentRight="true"

        />
    <Button
        android:id="@+id/locBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/set_loc"
        android:layout_toRightOf="@+id/timeView"
        android:layout_toLeftOf="@id/deleteBtn"

        />
</RelativeLayout>