<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/wtf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLocationSettings"
        android:text="@string/open_settings"/>
    <Button
        android:id="@+id/sortList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wtf"
        android:onClick="quickSort"
        android:text="@string/test_sort"/>
    <Button
        android:id="@+id/updList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sortList"
        android:onClick="updButton"
        android:text="@string/upd_button"/>
    <Button
        android:id="@+id/showMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickShowMap"
        android:text="@string/map"
        android:layout_below="@+id/sortList"
        android:layout_toRightOf="@+id/updList"/>
</RelativeLayout>